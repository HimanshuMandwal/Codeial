<link rel="stylesheet" href="/css/home.css">
<h1>Codeial / <%=title%></h1>
    <section id="feed-posts">
        <%if(locals.user){%>
        <div class="post-container">
            <span>
                Posts
            </span>

            <form action="/post/create" id="new-post-form" method="POST">
                <textarea cols="30" rows="3" name="content" placeholder="type here"></textarea>
                <input type="submit" value="Post">
            </form>


            <%for(let post of posts) {%>

            <div class="post">
                <p>
                    <div class="post-content">
                        Post : -  <%=post.content%>
                    </div>
                    <div class="post-creator">
                        Creator : - <%=post.user.name%>
                    </div>
                </p>
                <div class="post-comments">
                    <%if(locals.user) {%>
                    <form class="comment-form" method="POST" action="/comment/create">
                        <input type="text" name="content" placeholder="type here to add comment..."></input>
                        <input type="hidden" name="post" value="<%=post._id%>"></input>
                        <input type="submit" value="Comment">
                    </form>
                    <%}%>
                </div>
            </div>
            <%}%>

        </div>
         <%}%>
</section>
