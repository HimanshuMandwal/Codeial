<!DOCTYPE html>
<html>
    <head>
        <title><%=title%></title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js" ></script>
        <link rel="stylesheet" href="/css/layout.css">
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/footer.css">

        <%- style %>
    </head>
    <body>
        <div class="nav">
        <%- include('_header');%>
        </div>
        <%- body%>
        <!-- this body is by default understandable -->

        <div class="footer">
        <%- include('_footer');%>
        </div>
        <%- script %>
        <script>
            <%if(flash.success && flash.success.length>0){%>
                new Noty({
                    theme:'relax',
                    text: "<%=flash.success%>",
                    type:'success',
                    layout:'topRight',
                    timeout:1000,
                }).show();
            <%}%>
            <% if(flash.error && flash.error.length>0){%>
                new Noty({
                    theme:'relax',
                    text: "<%=flash.error%>",
                    type:'error',
                    layout:'topRight',
                    timeout:1000,
                }).show();
            <%}%>
            <% if(flash.warning && flash.warning.length>0){%>
                new Noty({
                    theme:'relax',
                    text: "<%=flash.warning%>",
                    type:'warning',
                    layout:'topRight',
                    timeout:1000,
                }).show();
            <%}%>
        </script>
    </body>
</html>