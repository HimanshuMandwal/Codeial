<div class="post" id="post-<%= post._id%>">
    <p>
        <div class="post-content">
            <%if(locals.user && locals.user.id == post.user.id){%>
            <small>
                <a class="delete-post-button" href="/post/destroy/<%=post.id%>">delete Post</a>
            </small>
            <%}%>
            Post : -  <%=post.content%>
        </div>
        <div class="post-creator">
            Creator : - <%=post.user.name%>
        </div>
    </p>
    <div class="post-comments">
        <%if(locals.user) {%>
        <form id="new-comment-form" class="comment-form" method="POST" action="/comment/create">
            <input type="text" name="content" placeholder="type here to add comment..."></input>
            <input type="hidden" name="post" value="<%=post._id%>"></input>
            <input type="submit" value="Comment">
        </form>
        <%}%>
        <div class="post-comments-list">
            <ul id="post-comments-<%=post._id %>">
                <%for(comment of post.comment) {%>
                    <%-include('_comment')-%>
                <%}%>
            </ul>
        </div>
    </div>
</div>